<section style="margin-top: 4rem;">
    <div class="container grid-container visible" id="grid1">
        <h3>Series ({{series_amount}})</h3>
        <ul class="lib">
            {{#each series}}
            <a href="/series/{{id}}" class="lib-cell shadow">
                {{#if cover}}
                <img src="{{cover}}" class="lib-img" alt="{{title}}">
                {{else}}
                <img src="https://raw.githubusercontent.com/Azalurg/ShadowTube/master/images/128.png" class="lib-img"
                    alt="{{title}}">
                {{/if}}

                <div class="lib-text lib-tex-first" title="{{title}}">{{title}}</div>
                <div class="lib-text lib-text-second" title="{{author}}">{{author}}</div>

            </a>

            {{/each}}
        </ul>
    </div>
</section>